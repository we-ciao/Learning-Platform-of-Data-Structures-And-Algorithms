
@{
    ViewData["Title"] = "提交代码";
}

<div class="">
    <div class="page-header-title">
        <h4 class="page-title">@ViewData["Title"] </h4>
    </div>
</div>


<div class="page-content-wrapper ">

    <div class="container">

        <!-- Row start -->
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-primary">
                    <div class="panel-body text-center">


                        <form asp-area="Student" asp-controller="Problem" asp-action="Submit" cmethod="post" class="form-horizontal">


                            <div class="form-group">
                                <div class="col-md-2"> </div>
                                <label class="col-md-2 control-label"><span class="star">*</span>题目ID</label>
                                <div class="col-md-2">
                                    <input type="text" class="form-control" name="id" readonly="readonly" value="@ViewBag.ProblemID" required>
                                </div>
                                <label class="col-md-1 control-label"><span class="star">*</span>编程语言</label>
                                <div class="col-md-2">
                                    <select class="form-control" data-emptyinfo="Language can not be NULL!" id="compilerid" name="compilerid">
                                        <option value="1">C</option>
                                        <option value="0">C++</option>
                                        <option value="2">Java</option>
                                        <option value="3">Python</option>
                                        <option value="4">Ruby</option>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-12">
                                    <textarea name="code" class="form-control" rows="15" placeholder="//add your code here" data-codeeditor="true"></textarea>
                                </div>
                            </div>

                            <input type="text" class="form-control" name="contest" readonly="readonly" value="@ViewBag.ProblemID" style="display:none" required>

                            <div class="form-group">
                                <label class="col-md-10 control-label"></label>
                                <button type="submit" class="btn btn-primary waves-effect waves-light">
                                    提交
                                </button>
                                <button type="reset" class="btn btn-default waves-effect m-l-5">
                                    取消
                                </button>
                            </div>

                        </form>




                    </div>
                </div>
            </div>
        </div>
        <!-- End of Row -->


    </div><!-- container -->

</div> <!-- Page content Wrapper -->
<!--codemirror js-->
<link href="~/css/codemirror-5.2.custom.min.css" rel="stylesheet" />
<script src="~/js/codemirror-package-5.2.min.js"></script>