@model Learn

@{
    ViewData["Title"] = "内容编辑";
}

<div class="">
    <div class="page-header-title">
        <h4 class="page-title">@ViewData["Title"] </h4>
    </div>
</div>

<div class="page-content-wrapper ">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-body">

                        <div class="row">
                            <div class="col-md-12">
                                <div class="panel panel-primary">
                                    <div class="panel-body">
                                        <address>
                                            1. 您可以在本页添加或修改推荐内容，本页所有内容均为必填项。<br />
                                            2. 推荐内容可以使用html显示。
                                        </address>
                                    </div> <!-- panel-body -->
                                </div> <!-- panel -->

                                <div class="panel-body">


                                    <form asp-controller="Learn" asp-action="Add" cmethod="post" class="form-horizontal">
                                        <div class="form-group">
                                            <label class="col-md-2 control-label"><span class="star">*</span>内容标题</label>
                                            <div class="col-md-10">
                                                <input type="text" class="form-control" asp-for="Title" required>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-md-2 control-label"><span class="star">*</span>描述</label>
                                            <div class="col-md-10">
                                                <textarea name="Info" class="form-control" rows="5" placeholder="//add your Html here" data-codeeditor="true">@Model.Info</textarea>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-2 control-label"><span class="star">*</span>推荐内容<br /><span class="supplementary">（可使用HTML）</span></label>
                                            <div class="col-md-10">
                                                <textarea name="Content" class="form-control" rows="15" placeholder="//add your Html here" data-codeeditor="true">@Model.Content</textarea>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-md-10 control-label"></label>
                                            <button type="submit" class="btn btn-primary waves-effect waves-light">
                                                提交
                                            </button>
                                            <button type="reset" class="btn btn-default waves-effect m-l-5">
                                                取消
                                            </button>
                                        </div>

                                    </form>
                                </div> <!-- panel-body -->
                            </div>
                        </div> <!-- end row -->
                    </div> <!-- panel body -->
                </div> <!-- end panel -->

            </div> <!-- end col -->

        </div>
        <!-- end row -->


    </div><!-- container -->
</div> <!-- Page content Wrapper -->
<!--codemirror js-->
<link href="~/css/codemirror-5.2.custom.min.css" rel="stylesheet" />
<script src="~/js/codemirror-package-5.2.min.js"></script>