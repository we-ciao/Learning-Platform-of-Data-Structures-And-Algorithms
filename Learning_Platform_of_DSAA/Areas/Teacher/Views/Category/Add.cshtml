@model Category

@{
    ViewData["Title"] = "题目分类编辑";
}

<div class="">
    <div class="page-header-title">
        <h4 class="page-title">@ViewData["Title"] </h4>
    </div>
</div>

<div class="page-content-wrapper ">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-body">

                        <div class="row">
                            <div class="col-md-12">
                                <div class="panel panel-primary">
                                    <div class="panel-body">
                                        <address>
                                            1. 您可以在本页添加或修改题目分类，本页所有内容均为必填项。<br />
                                            2. 题目分类排序序号可以为任意数字，显示时均按该序号进行排序显示。
                                        </address>
                                    </div> <!-- panel-body -->
                                </div> <!-- panel -->

                                <div class="panel-body">


                                    <form asp-controller="Category" asp-action="Add" cmethod="post" class="form-horizontal">
                                        <div class="form-group">
                                            <label class="col-md-2 control-label"><span class="star">*</span>分类标题</label>
                                            <div class="col-md-10">
                                                <input type="text" class="form-control" asp-for="Title" required>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-2 control-label"><span class="star">*</span>分类排序序号<span class="supplementary">（可重复）</span></label>
                                            <div class="col-md-10">
                                                <input type="text" class="form-control" asp-for="Order" required>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-md-10 control-label"></label>
                                            <button type="submit" class="btn btn-primary waves-effect waves-light">
                                                提交
                                            </button>
                                            <button type="reset" class="btn btn-default waves-effect m-l-5">
                                                取消
                                            </button>
                                        </div>

                                    </form>
                                </div> <!-- panel-body -->
                            </div>
                        </div> <!-- end row -->
                    </div> <!-- panel body -->
                </div> <!-- end panel -->

            </div> <!-- end col -->

        </div>
        <!-- end row -->


    </div><!-- container -->
</div> <!-- Page content Wrapper -->
